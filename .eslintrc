{
    "parser": "babel-eslint",
    "extends": "airbnb",
    "plugins": [
        "flowtype"
    ],
    "rules": {
        "semi": ["warn", "never"],
        "no-underscore-dangle": "off",
        "no-param-reassign": ["error", { "props": false }],
        "no-use-before-define": ["error", { "functions": false, "classes": true, "variables": true }],
        "linebreak-style": 0,
        "react/jsx-filename-extension": 0,
        "react/react-in-jsx-scope": 0,
        "func-names": 0
    },
    "eslintConfig": {
        "globals": {
            "window": true
        }
    }
}